<main class='container'>
  <h1 class='text-center'><%= @post.title %></h1>

  <div class="card border-light mb-3" style="max-width: 80rem;">
    <div class="card-header">
      <%= link_to :Listing, posts_path %>
    </div>
    <div class="card-body">
      <p class="card-text">
        <%= medium_date3 @post.created_at %> by <%= @post.creator.first_name %>
        <%= @post.content %>
      </p>
    </div>
  </div>

  <section>
    <h3>Comments</h3>
    
    <%= render 'comments/form' %>
    
    <section id='comments'>
      <%= render @comments %>
    </section>
  </section>
</main>