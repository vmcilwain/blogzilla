<tr>
  <td><%= link_to post.id, admin_post_path(post) %></td>
  <td><%= truncate post.title, length: 80 %></td>
  <td>0</td>
  <td><%= medium_date post.created_at %></td>
  <td><%= medium_date post.updated_at %></td>
  <td>
    <%= link_to :Edit, edit_admin_post_path(post) %> | 
    <%= link_to :Delete, admin_post_path(post), method: :delete, data: { confirm: "Are you sure? This can't be undone" } %>
  </td>
</tr>